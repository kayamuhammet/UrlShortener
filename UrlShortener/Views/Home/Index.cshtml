@model List<UrlShortener.Models.UrlModel>

@{
    ViewData["Title"] = "URL Kısaltıcı";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">URL Kısaltıcı</h1>
            
            <!-- Mesajlar -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }
            
            @if (ViewData["Errors"] != null)
            {
                <div class="alert alert-danger">
                    Lütfen geçerli bir URL giriniz.
                </div>
            }
            
            <!-- URL Kısaltma Formu -->
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-controller="Home" asp-action="ShortenUrl" method="post">
                        <div class="input-group">
                            <input type="url" 
                                   name="OriginalUrl" 
                                   class="form-control" 
                                   placeholder="https://example.com"
                                   required>
                            <button class="btn btn-primary" type="submit">Kısalt</button>
                        </div>
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>
            
            <!-- URL Listesi -->
            @if (Model != null && Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5>Kısaltılmış URL'ler (@Model.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(m => m.First().OriginalUrl)</th>
                                        <th>Kısa URL</th>
                                        <th>@Html.DisplayNameFor(m => m.First().ClickCount)</th>
                                        <th>@Html.DisplayNameFor(m => m.First().CreatedDate)</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var url in Model)
                                    {
                                    <tr>
                                        <td>
                                            <a href="@url.OriginalUrl" target="_blank"
                                                class="text-truncate d-inline-block" style="max-width: 300px;">
                                                @url.OriginalUrl
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="Home" asp-action="RedirectToUrl"
                                                asp-route-code="@url.ShortCode" target="_blank">
                                                @Context.Request.Host/@url.ShortCode
                                            </a>
                                        </td>
                                        <td>@url.ClickCount</td>
                                        <td>@url.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-controller="Home" asp-action="Redirect"
                                                    asp-route-code="@url.ShortCode" class="btn btn-sm btn-primary"
                                                    target="_blank" title="Git">
                                                    <i class="fas fa-external-link-alt"></i>
                                                </a>
                                                <a asp-controller="Home" asp-action="QrCode"
                                                    asp-route-code="@url.ShortCode" class="btn btn-sm btn-success"
                                                    target="_blank" title="QR Kod">
                                                    <i class="fa-solid fa-qrcode"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                }
                else
                {
                <div class="alert alert-info text-center">
                    Henüz kısaltılmış URL yok. İlk URL'nizi ekleyin!
                </div>
                }
            </div>
        </div>
    </div>